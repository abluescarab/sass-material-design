{
  "private": true,
  "workspaces": [
    "example",
    "sass-material-design"
  ],
  "scripts": {
    "build": "npm run build -w sass-material-design -w example",
    "clean": "shx rm -f **/*.tsbuildinfo && shx rm -rf **/dist **/out",
    "rebuild": "npm run clean && npm run build",
    "watch": "concurrently \"npm run watch\" \"npm run watch -w sass-material-design\" \"npm run watch -w example\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
